<% if current_user.has_role? :admin %>
<h1>Listing group_emails</h1>

<table>
  <thead>
    <tr>
      <th>Message subject</th>
      <th>Message body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @group_emails.each do |group_email| %>
      <tr>
        <td><%= group_email.message_subject %></td>
        <td><%= group_email.message_body %></td>
        <td><%= link_to 'Show', group_email %></td>
        <td><%= link_to 'Edit', edit_group_email_path(group_email) %></td>
        <td><%= link_to 'Destroy', group_email, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Group email', new_group_email_path %>
    <% else %>
    <div class="jumbotron">
      <h1>Hello <%= current_user.first_name %></h1>
      <div class="alert alert-danger" role="alert">
        <p>Dear you have no right to access this page !!!<br>
          Please go back !!!</p>
      </div>
      <p><%= link_to "Dashboard", dashboard_index_path, :class => 'btn btn-primary btn-lg' %></p>
      <p><%= link_to "Emails Dashboard", emails_path, :class => 'btn btn-primary btn-lg' %></p>
    </div>
<% end %>