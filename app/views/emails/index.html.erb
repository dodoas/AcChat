<%- model_class = Email -%>
<div class="tab-content">
  <div role="tabpanel" class="tab-pane active" id="home">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover" id="received">
      <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:id) %></th>
        <th><%= model_class.human_attribute_name(:message_subject) %></th>
        <th><%= model_class.human_attribute_name(:sender_id) %></th>
        <th><%= model_class.human_attribute_name(:created_at) %></th>
        <% if current_user.has_role? :admin %>
        <th><%=t '.actions', :default => t("helpers.actions") %></th>
            <% end %>
      </tr>
      </thead>
      <tbody>
      <% @emails_Received.each do |received| %>
          <tr>
            <td><%= link_to received.id, email_path(received) %></td>
            <td><%= received.message_subject %></td>
            <td><%= received.sender.email %></td>
            <td><%=l received.created_at %></td>
              <% if current_user.has_role? :admin %>
                <td>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                          email_path(received),
                          :method => :delete,
                          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                          :class => 'btn btn-xs btn-danger' %>
                </td>
                  <% end %>
          </tr>
      <% end %>
      </tbody>
    </table>
      </div>
  </div>
  <div role="tabpanel" class="tab-pane" id="profile">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover" id="send">
      <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:id) %></th>
        <th><%= model_class.human_attribute_name(:recipient_id) %></th>
        <th><%= model_class.human_attribute_name(:message_subject) %></th>
        <th><%= model_class.human_attribute_name(:created_at) %></th>
        <% if current_user.has_role? :admin %>
        <th><%=t '.actions', :default => t("helpers.actions") %></th>
            <% end %>
      </tr>
      </thead>
      <tbody>
      <% @emails_Send.each do |send| %>
          <tr>
            <td><%= link_to send.id, email_path(send) %></td>
            <td><%= current_user.email %></td>
            <td><%= send.message_subject %></td>
            <td><%=l send.created_at %></td>
              <% if current_user.has_role? :admin %>
                <td>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                          email_path(send),
                          :method => :delete,
                          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                          :class => 'btn btn-xs btn-danger' %>
                </td>
                  <% end %>
          </tr>
      <% end %>
      </tbody>
    </table>
      </div>
  </div>
</div>