<% @last = Email.last %>
<%= @last.recipient_id %>
<% user_in_last_post = @last.recipient_id %>
<% @user = User.user(user_in_last_post).last  %>
<%= @user.email %>
<%- model_class = Email -%>
<!-- Tab panes -->
<div class="tab-content">
  <div role="tabpanel" class="tab-pane active" id="home">
    <table class="table table-striped">
      <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:id) %></th>
        <th><%= model_class.human_attribute_name(:message_subject) %></th>
        <th><%= model_class.human_attribute_name(:sender_id) %></th>
        <th><%= model_class.human_attribute_name(:created_at) %></th>
        <% if current_user.has_role? :admin %>
        <th><%=t '.actions', :default => t("helpers.actions") %></th>
            <% end %>
      </tr>
      </thead>
      <tbody>
      <% @emails_Received.each do |received| %>
          <tr>
            <td><%= link_to received.id, email_path(received) %></td>
            <td><%= received.message_subject %></td>
            <td><%= received.sender.email %></td>
            <td><%=l received.created_at %></td>
            <td>
              <% if current_user.has_role? :admin %>
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
                          edit_email_path(received), :class => 'btn btn-default btn-xs' %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                          email_path(received),
                          :method => :delete,
                          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                          :class => 'btn btn-xs btn-danger' %>
                  <% end %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <div role="tabpanel" class="tab-pane" id="profile">
    <table class="table table-striped">
      <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:id) %></th>
        <th><%= model_class.human_attribute_name(:recipient_id) %></th>
        <th><%= model_class.human_attribute_name(:message_subject) %></th>
        <th><%= model_class.human_attribute_name(:created_at) %></th>
        <% if current_user.has_role? :admin %>
        <th><%=t '.actions', :default => t("helpers.actions") %></th>
            <% end %>
      </tr>
      </thead>
      <tbody>
      <% @emails_Send.each do |send| %>
          <tr>
            <td><%= link_to send.id, email_path(send) %></td>
            <td><%= current_user.email %></td>
            <td><%= send.message_subject %></td>
            <td><%=l send.created_at %></td>
            <td>
              <% if current_user.has_role? :admin %>
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
                          edit_email_path(send), :class => 'btn btn-default btn-xs' %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                          email_path(send),
                          :method => :delete,
                          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                          :class => 'btn btn-xs btn-danger' %>
                  <% end %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>

