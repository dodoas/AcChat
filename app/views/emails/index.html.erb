<%- model_class = Email -%>
<!-- Tab panes -->
<div class="tab-content">
  <div role="tabpanel" class="tab-pane active" id="home">
    <table class="table table-striped">
      <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:id) %></th>
        <th><%= model_class.human_attribute_name(:recipient_id) %></th>
        <th><%= model_class.human_attribute_name(:message_subject) %></th>
        <th><%= model_class.human_attribute_name(:message_body) %></th>
        <th><%= model_class.human_attribute_name(:sender_id) %></th>
        <th><%= model_class.human_attribute_name(:created_at) %></th>
        <th><%=t '.actions', :default => t("helpers.actions") %></th>
      </tr>
      </thead>
      <tbody>
      <% @emails_Received.each do |email| %>
          <tr>
            <td><%= link_to email.id, email_path(email) %></td>
            <td><%= email.recipient_id %></td>
            <td><%= email.message_subject %></td>
            <td><%= email.message_body %></td>
            <td><%= email.sender_id %></td>
            <td><%=l email.created_at %></td>
            <td>
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
                          edit_email_path(email), :class => 'btn btn-default btn-xs' %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                          email_path(email),
                          :method => :delete,
                          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                          :class => 'btn btn-xs btn-danger' %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <div role="tabpanel" class="tab-pane" id="profile">
    <table class="table table-striped">
      <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:id) %></th>
        <th><%= model_class.human_attribute_name(:recipient_id) %></th>
        <th><%= model_class.human_attribute_name(:message_subject) %></th>
        <th><%= model_class.human_attribute_name(:message_body) %></th>
        <th><%= model_class.human_attribute_name(:sender_id) %></th>
        <th><%= model_class.human_attribute_name(:created_at) %></th>
        <th><%=t '.actions', :default => t("helpers.actions") %></th>
      </tr>
      </thead>
      <tbody>
      <% @emails_Send.each do |email| %>
          <tr>
            <td><%= link_to email.id, email_path(email) %></td>
            <td><%= email.recipient_id %></td>
            <td><%= email.message_subject %></td>
            <td><%= email.message_body %></td>
            <td><%= email.sender_id %></td>
            <td><%=l email.created_at %></td>
            <td>
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
                          edit_email_path(email), :class => 'btn btn-default btn-xs' %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                          email_path(email),
                          :method => :delete,
                          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                          :class => 'btn btn-xs btn-danger' %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>



