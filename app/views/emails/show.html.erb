<%- model_class = Email -%>
<div class="row">
  <div class="col-md-8">
    <dl class="dl-horizontal">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">
          <dt><strong><%= model_class.human_attribute_name(:recipient_id) %>:</strong></dt>
          <dd><%= @email.recipient.email %></dd>
        </h3>
      </div>
      <div class="panel-body">
        <ul class="list-group">
          <li class="list-group-item">
            <dt><strong><%= model_class.human_attribute_name(:message_subject) %>:</strong></dt>
            <dd><%= @email.message_subject %></dd>
          </li>
        </ul>
        <div class="panel panel-info">
          <div class="panel-heading">
            <%= model_class.human_attribute_name(:message_body) %>
          </div>
          <div class="panel-body">
            <div class="well well-lg">
              <%= @email.message_body %>
            </div>
          </div>
        </div>
      </div>
      <div class="panel-footer">
        <dt><strong><%= model_class.human_attribute_name(:sender_id) %>:</strong></dt>
        <dd><%= @email.sender.email %></dd>
      </div>
    </div>
    </dl>
  </div>
  <div class="col-md-4">

  </div>
</div>
<div class="row">
  <div class="col-md-6">
    <%= link_to t('.back', :default => t("helpers.links.back")),
                emails_path, :class => 'btn btn-default'  %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_email_path(@email), :class => 'btn btn-default' %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                email_path(@email),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
  </div>
  <div class="col-md-6">

  </div>
</div>