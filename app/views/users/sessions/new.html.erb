    <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => { :class => 'form-horizontal' }) do |f| %>
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, :class => 'form-control', :placeholder => 'Email Address' %>
        </div>

        <div class="form-group">
          <%= f.password_field :password, autocomplete: "off", :class => 'form-control', :placeholder => 'Your Password' %>
        </div>
        <% if devise_mapping.rememberable? -%>
            <div class="form-group">
              <div class="checkbox">
                <label>
              <%= f.check_box :remember_me %><h5> Remember me</h5>
                </label>
              </div>
            </div>
        <% end -%>
        <div class="form-group">
          <%= f.submit "Log in", :class => 'btn btn-default btn-lg' %>
          <button type="button" class="btn btn-default btn-lg" data-toggle="modal" data-target=".bs-example-modal-sm">Problems?</button>
        </div>
    <% end %>
    <div class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-sm">
        <div class="modal-content">
          <%= render "users/shared/links" %>
        </div>
      </div>
    </div>
