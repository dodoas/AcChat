<h1>Forgot password?</h1>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <div class="form-group">
    <%= f.email_field :email, required: true, autofocus: true, :class => 'form-control', :placeholder => 'Email address' %>
  </div>
  <div class="form-group">
    <%= f.button "Send me reset password instructions", :class => 'btn btn-custom btn-lg btn-block' %>
  </div>
<% end %>
<div class="form-group">
<%= render "devise/shared/links" %>
</div>