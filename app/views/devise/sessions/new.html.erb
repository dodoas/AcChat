<h1>Log in with your email account</h1>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.email_field :email, required: false, autofocus: true, :class => 'form-control', :placeholder => 'Email address' %>
    </div>
    <div class="form-group">
    <%= f.password_field :password, required: false, :class => 'form-control', :placeholder => 'Password' %>
    </div>
    <div class="form-group">
    <%= f.check_box :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-group">
    <%= f.submit "Log in", :class => 'btn btn-custom btn-lg btn-block' %>
  </div>
<% end %>
<div class="form-group">
<%= render "devise/shared/links" %>
</div>