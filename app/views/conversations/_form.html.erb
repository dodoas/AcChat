<div class="row">
  <div class="col-md-8">
  	<div class="panel panel-default">
	 <div class="panel-heading">
	   <h3 class="panel-title">Create new conversation</h3>
	 </div>
	 <div class="panel-body">
	 <%= form_for :conversation, url: :conversations do |f| %>
		<div class="form-group">
		<%= f.email_field :recipients, :class => 'form-control', :placeholder => 'Recipient' %>
		</div>
		<div class="form-group">
		<%= f.text_field :subject, :class => 'form-control', :placeholder => 'Subject' %>
		</div>
		<div class="form-group">
		<%= f.text_area :body, size: '50x10', :class => 'form-control', :placeholder => 'Body' %>
		</div>
		<div class="form-group">
		<%= f.submit "Submit", class: 'btn-primary' %> | <%= link_to "Back", {:controller => 'conversations', :action => 'index'} %>
		</div>
		<% end %>
	 </div>
</div>
  </div>
  <div class="col-md-4">
  	
  </div>
</div>